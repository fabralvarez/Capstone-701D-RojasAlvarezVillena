<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_theme_background"
    android:orientation="vertical"
    tools:context=".MedicationGeneralListActivity">

    <!-- Header -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="@color/md_theme_primary"
        android:text="Todos los Medicamentos"
        android:textColor="@color/md_theme_onPrimary"
        android:textSize="22sp"
        android:textStyle="bold"
        android:gravity="center" />

    <!-- Botón para agregar -->
    <Button
        android:id="@+id/btnAddMedication"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/md_theme_primary"
        android:text="➕ Agregar Medicamento a Persona"
        android:textColor="@color/md_theme_onPrimary"
        android:textSize="16sp" />

    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginVertical="16dp"
        android:visibility="gone" />

    <!-- Estado vacío -->
    <TextView
        android:id="@+id/tvEmptyState"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:text="No hay medicamentos registrados\n\nAgrega medicamentos a las personas para verlos aquí"
        android:textColor="@color/md_theme_onBackground"
        android:textSize="16sp"
        android:visibility="gone" />

    <!-- Lista de medicamentos -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvMedications"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp" />

    <!-- Botón volver -->
    <Button
        android:id="@+id/btnBack"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Volver al Menú Principal"
        android:textSize="16sp" />

</LinearLayout>