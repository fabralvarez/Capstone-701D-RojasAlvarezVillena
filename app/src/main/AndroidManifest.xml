<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:localeConfig="@xml/locales_config"
        android:minSdkVersion="31"
        android:targetSdkVersion="36"
        android:theme="@style/AppTheme"
        tools:targetApi="36">
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginActivity" />
        <activity android:name=".RegisterActivity" />
        <activity android:name=".MainMenuActivity" />
        <activity android:name=".AddPersonActivity" />
        <activity android:name=".PersonListActivity" />
        <activity android:name=".MedicationListActivity" />
        <activity android:name=".AddMedicationActivity" />
        <activity android:name=".MedicationGeneralListActivity" />
        <activity
            android:name=".BaseMedicationsActivity"
            android:exported="false" />
        <service
            android:name=".services.AlarmService"
            android:enabled="true"
            android:exported="false" />

        <!-- NUEVO: Receptor de alarmas -->
        <receiver
            android:name=".receiver.AlarmReceiver"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="ACTION_TRIGGER_ALARM" />
            </intent-filter>
        </receiver>
    </application>
</manifest>